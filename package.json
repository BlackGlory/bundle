    "jest-resolve": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.5",
    "ts-patch": "^2.1.0",
    "typescript": "4.8",
